<div class="container">
<div class="row">


 <%= render 'books/userinfo', user: @user %>
 
 
 <%= form_for(@book,  url: books_path) do |f| %>
  <h2>New book</h2>
   <h4>Title</h4>
    <%= f.text_field :title,class: "col-xs-12" %>
   <h4>Opinipn</h4>
    <%= f.text_field :body,class: "col-xs-12" %>
   <nav>
    <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
   </nav>
 <% end %>
</div>
 
<div class= "col-xs-9">
<h2>Books</h2>
<table class="table">
  <thead>
   <tr>
    <th><p>Title</p></th>
    <th><p>Body</p></th>
   </tr>
  </thead>
  <% @books.each do |book| %>
   <%= link_to user_path(@user.id) do %>
   <tr>
   <td><%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'40x40',format: 'no_image.jpg' %></td>
   <% end %>
   <td><%=link_to book.title, book_path(book.id)%></td>
   <td><%= book.body %></td>
   </tr>
   <% end %>
 </table>
 </div>
 </div>
 </div>