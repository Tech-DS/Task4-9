<div class="container">
<div class="row">


<div class= "col-xs-3">
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
  <tr>
    <th><p>name</p></th>
    <td><p><%= @user.name %></p></td>
  </tr>
  <tr>
    <th><p>introduction</p></th>
    <td><p><%= @user.introduction%></p></td>
  </tr>
 </table>
 <%= link_to"",edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
 

 <%= form_for(@book,  url: books_path) do |f| %>
  <h2>New book</h2>
   <h4>Title</h4>
    <%= f.text_field :title,class: "col-xs-12" %>
   <h4>Opinipn</h4>
    <%= f.text_field :body,class: "col-xs-12" %>
   <nav>
    <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
   </nav>
 <% end %>
  <div class="error">
  <%= render 'books/error', book: @book %>
  </div>
</div>

<div class= "col-xs-9">
 <h2>Books</h2>
  <table class="table">
   <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th></th>
   </tr>

    <% @books.each do |book| %>
     <tr>
      <td><%= link_to user_path(book.user_id) do %>
       <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'40x40',format: 'no_image.jpg' %></td>
     <% end %>
     <td><%=link_to book.title, book_path(book.id)%></td>
     <td><%=link_to book.body %></td>
      </tr>
     <% end %>
  </table>
 
  </div>
  </div>